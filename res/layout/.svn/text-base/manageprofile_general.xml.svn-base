<?xml version="1.0" encoding="utf-8"?>
<!-- Tab 'General' -->
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ManageProfile_TabGeneral"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout 
		android:layout_width="fill_parent" 
		android:layout_height="100px"
		android:gravity="center_vertical">
		
		<ImageView 
			android:id="@+id/ManageProfileIconBtn"
			android:layout_width="35dip" 
			android:layout_height="35dip"
			android:layout_gravity="top|center_horizontal"
			android:adjustViewBounds="true"
			android:cropToPadding="false"
			android:layout_marginLeft="5dip" 
			android:layout_marginRight="5dip"
			android:layout_marginTop="7dip" 
			/>

		<TableLayout 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
			android:stretchColumns="0"
			android:paddingBottom="15px">
			
			<TableRow>
				<TextView 
					android:id="@+id/ManageProfileNameLabel"
					android:text="@string/ManageProfileNameLabel" 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent" 
					android:textAppearance="@style/Label"/>
			</TableRow>
			<TableRow>
				<EditText 
					android:id="@+id/ManageProfileNameField"
					android:singleLine="true" 
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:textAppearance="@style/EditBox"
					android:maxLength="50"/>
			</TableRow>
		</TableLayout>
		
	</LinearLayout>

	<TextView 
		android:id="@+id/ManageProfilePriorityLabel"
		android:text="@string/ManageProfilePriorityLabel"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:textAppearance="@style/Label" />
	<SeekBar 
		android:id="@+id/ManageProfilePriorityField"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
		android:max="50"
		android:progress="50"/>

</LinearLayout>
