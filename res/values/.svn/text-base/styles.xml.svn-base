<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ProfileName_Desactivated" parent="android:TextAppearance">
    	<item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="ProfileName" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

	<style name="ProfileSummary" parent="android:TextAppearance">
	    <item name="android:textStyle">normal</item>
	    <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="ConditionTitle" parent="android:TextAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="ConditionSummary" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">10sp</item>
    </style>
    
    <style name="ConditionActivityText" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="ContextItem" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>
	
	<style name="Label" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="BlackLabel" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    
    <style name="Button" parent="android:TextAppearance">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="EditBox" parent="android:TextAppearance">
        <item name="android:textSize">15sp</item>
    </style>
	
	<style name="ConditionDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
	</style>
	
	
	
		<style name="Animations" />

	<!-- PopDownMenu -->
	<style name="Animations.PopDownMenu" />
	
	<style name="Animations.PopDownMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
	</style>
	
	<style name="Animations.PopDownMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_topright_to_bottomleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottomleft_to_topright</item>
	</style>
	
	<style name="Animations.PopDownMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
	</style>
	
	<!-- PopUpMenu -->
	<style name="Animations.PopUpMenu" />
	
	<style name="Animations.PopUpMenu.Left">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomleft_to_topright</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topright_to_bottomleft</item>
	</style>
	
	<style name="Animations.PopUpMenu.Right">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottomright_to_topleft</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_topleft_to_bottomright</item>
	</style>
	
	<style name="Animations.PopUpMenu.Center">
		<item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
		<item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
	</style>
	
</resources>

